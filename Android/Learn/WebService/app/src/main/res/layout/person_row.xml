<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Name"
        android:textColor="#0065FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Birth: "
        android:textColor="#00FF22"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvBirthVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvBirth"
        android:text="20xx"
        android:textColor="#00FF22"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/tvBirth"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/tvAddressVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvAddress"
        android:text="Thanh Hoa"
        android:textColor="#ff00"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imgDel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/delete" />

    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/edit"
        android:layout_toLeftOf="@+id/imgDel"
        android:layout_marginRight="10dp"/>


</RelativeLayout>