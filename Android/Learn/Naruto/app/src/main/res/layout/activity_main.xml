<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/score"
        android:layout_width="103dp"
        android:layout_height="57dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/lane1"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="10dp"
        android:max="10000"
        android:thumb="@drawable/nar"
        app:layout_constraintBottom_toTopOf="@+id/lane2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/lane2"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="10dp"
        android:max="10000"
        android:thumb="@drawable/lee"
        app:layout_constraintBottom_toTopOf="@+id/lane3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/lane3"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:max="10000"
        android:thumb="@drawable/sak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:srcCompat="@drawable/nar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="62dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:srcCompat="@drawable/lee"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sak"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp" />

    <RadioGroup
        android:id="@+id/choosePerson"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rdNaruto"
            android:layout_width="84dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:buttonTint="#FDE300" />

        <RadioButton
            android:id="@+id/rdRockLee"
            android:layout_width="76dp"
            android:layout_height="62dp"
            android:buttonTint="#8BFF05" />

        <RadioButton
            android:id="@+id/rdSasuke"
            android:layout_width="79dp"
            android:layout_height="64dp"
            android:buttonTint="#FF0000" />

    </RadioGroup>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="64dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/oddPoint"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@color/white"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter odds"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>