<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvTitleDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Do you want to delete ?"
        android:textColor="#FF0000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnYesDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleDel"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/btnNoDel"
        android:backgroundTint="#2FFF00"
        android:text="Yes" />

    <Button
        android:id="@+id/btnNoDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTitleDel"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FF0000"
        android:text="No" />

</RelativeLayout>